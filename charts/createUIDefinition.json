{
	"$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
	"handler": "Microsoft.Azure.CreateUIDef",
	"version": "0.1.2-preview",
	"parameters": {
		"config": {
			"isWizard": false,
			"basics": {
				"location": {
					"visible": true,
					"allowedValues": [
						"westus2"
					]
				},
				"resourceGroup": {
					"allowExisting": true
				}
			}
		},
		"basics": [
			{
				"name": "clusterLookupControl",
				"type": "Microsoft.Solutions.ArmApiControl",
				"request": {
          			"method": "GET",
          			"path": "[concat(subscription().id, '/resourcegroups/', resourceGroup().name,  '/providers/Microsoft.ContainerService/managedClusters?api-version=2022-11-01')]"
        		}
      		},
      		{
        		"name": "existingClusterResourceName",
        		"type": "Microsoft.Common.DropDown",
        		"label": "AKS Cluster Name",
        		"toolTip": "AKS Cluster Resource Name",
        		"constraints": {
          			"allowedValues": "[map(basics('clusterLookupControl').value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.id, '\"}')))]",
          			"required": true
        		}
      		}
		],
		"steps": [
			{
				"name": "anyscaleOperatorDetails",
				"label": "Anyscale Operator Details",
				"elements": [
					{
						"name": "extensionResourceName",
						"type": "Microsoft.Common.TextBox",
						"label": "Cluster extension resource name",
						"defaultValue": "",
						"toolTip": "Only lowercase alphanumeric characters are allowed, and the value must be 6-30 characters long.",
						"constraints": {
							"required": true,
							"regex": "^[a-z0-9]{6,30}$",
							"validationMessage": "Only lowercase alphanumeric characters are allowed, and the value must be 6-30 characters long."
						},
						"visible": true
					},
					{
						"name": "controlPlaneURL",
						"type": "Microsoft.Common.TextBox",
						"label": "Anyscale Control Plane URL",
						"toolTip": "This will replace the controlPlaneURL's value inside your values.yaml",
						"defaultValue": "https://console.anyscale.com",
						"constraints": {
							"required": true,
							"regex": "^(https?://)?([\\da-z.-]+)\\.([a-z.]{2,6})([/\\w .-]*)*/?$",
							"validationMessage": "Please enter a valid URL."
						}
					},
					{
						"name": "cloudDeploymentId",
						"type": "Microsoft.Common.TextBox",
						"label": "Cloud Deployment ID",
						"toolTip": "Get the cloud deployment ID from your Anyscale Cloud",
						"defaultValue": "cldsrc_123",
						"constraints": {
							"required": true,
							"regex": ".*",
							"validationMessage": "Please enter a valid cloud deployment ID."
						}
					},
					{
						"name": "operatorIamIdentity",
						"type": "Microsoft.Common.TextBox",
						"label": "Operator IAM Identity",
						"toolTip": "This will replace the operatorIamIdentity's value inside your values.yaml",
						"defaultValue": "Cats",
						"constraints": {
							"required": true,
							"regex": ".*",
							"validationMessage": "Only alphanumeric characters are allowed, and the value must be 6-30 characters long."
						}
					},
					{
						"name": "anyscaleCliToken",
						"type": "Microsoft.Common.TextBox",
						"label": "Anyscale CLI Token",
						"toolTip": "This will replace the anyscaleCliToken's value inside your values.yaml",
						"defaultValue": "Dogs",
						"constraints": {
							"required": true,
							"regex": ".*",
							"validationMessage": "Please enter a valid token."
						}
					}
				]
			}
		],
		"outputs": {
			"location": "[location()]",
			"clusterResourceName": "[basics('existingClusterResourceName')]",
			"extensionResourceName": "[steps('anyscaleOperatorDetails').extensionResourceName]",
			"controlPlaneURL": "[steps('anyscaleOperatorDetails').controlPlaneURL]",
			"cloudDeploymentId": "[steps('anyscaleOperatorDetails').cloudDeploymentId]",
			"operatorIamIdentity": "[steps('anyscaleOperatorDetails').operatorIamIdentity]",
			"anyscaleCliToken": "[steps('anyscaleOperatorDetails').anyscaleCliToken]"
		}
	}
}
